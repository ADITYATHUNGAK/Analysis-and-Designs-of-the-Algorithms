#include <stdio.h>
#include <stdlib.h>

#define MAX 50

// Function to check if a queen can be placed at row 'r'
int can_place(int c[], int r) {
    int i;
    for (i = 0; i < r; i++) {
        if (c[i] == c[r] || abs(c[i] - c[r]) == abs(i - r))
            return 0;
    }
    return 1;
}

// Function to display the board configuration
void display(int c[], int n) {
    int i, j;
    char cb[10][10];

    // Initialize board with '-'
    for (i = 0; i < n; i++)
        for (j = 0; j < n; j++)
            cb[i][j] = '-';

    // Place queens
    for (i = 0; i < n; i++)
        cb[i][c[i]] = 'Q';

    // Print board
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++)
            printf("%c ", cb[i][j]);
        printf("\n");
    }
}

// Function to solve the N-Queens problem using backtracking
void n_queens(int n) {
    int r = 0;
    int c[MAX];
    c[0] = -1;

    while (r >= 0) {
        c[r]++;
        while (c[r] < n && !can_place(c, r))
            c[r]++;

        if (c[r] < n) {
            if (r == n - 1) {
                display(c, n);
                printf("\n");
            } else {
                r++;
                c[r] = -1;
            }
        } else {
            r--;
        }
    }
}

void main() {
    int n;
    printf("Enter the number of queens: ");
    scanf("%d", &n);
    n_queens(n);
}
